<resources>

    <!-- Base application theme. -->
    <!-- Light application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRedLight</item>
        <item name="colorPrimaryDark">@color/colorBlueLight</item>
        <item name="colorAccent">@color/colorYellowLight</item>
        <item name="mBackgroundColor">#E2E2E2</item>
        <item name="mTextColor">#000</item>
        <item name="mButtonColor">#F2A2FF</item>
    </style>

    <style name="darkTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRedDark</item>
        <item name="colorPrimaryDark">@color/colorBlueDark</item>
        <item name="colorAccent">@color/colorYellowDark</item>
        <item name="mBackgroundColor">#242424</item>
        <item name="mTextColor">#FFFFFF</item>
        <item name="mButtonColor">#9C27B0</item>
    </style>

    <style name="randomStyle" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRedDark</item>
        <item name="colorPrimaryDark">@color/colorBlueDark</item>
        <item name="colorAccent">@color/colorYellowDark</item>
    </style>

</resources>
